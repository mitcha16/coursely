<% provide(:title, 'Lessons') %>
<h1>Lessons</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
    <%= render :partial => 'lesson', :locals => {:lesson => lesson} %>
    <% end %>
  </tbody>
</table>
