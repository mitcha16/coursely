<% provide(:title, 'Users') %>
<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Job Title</th>
      <th>Business Unit</th>
      <th>Department</th>
      <th>Location</th>
      <th>Hire Date</th>
      <th>Manager Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <%= render :partial => 'user', :locals => {:user => user} %>
    <% end %>
  </tbody>
</table>
